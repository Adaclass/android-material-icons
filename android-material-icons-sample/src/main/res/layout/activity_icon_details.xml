<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.malinskiy.materialicons.sample.IconsFragment">

    <com.malinskiy.materialicons.widget.IconTextView
            android:id="@id/item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="288dp"
            android:transitionName="@string/transition_icon"
            android:layout_centerInParent="true"
            tools:text="O"/>

    <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/item_text"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="4dp"
            android:textSize="18dp"
            android:maxLines="2"
            android:textColor="@color/primary_material_dark"
            android:background="@color/background_material_light"
            android:layout_below="@id/item_icon"
            android:gravity="center"
            app:typeface="roboto_slab_light"
            tools:text="Sample icon"/>

</RelativeLayout>
